<h1>Restaurants#index</h1>
<p>Find me in app/views/restaurants/index.html.erb</p>
<h1>All Restaurants</h1>

<ul>
  <% @restaurants.each do |restaurant| %>
    <li>
      <strong><%= link_to restaurant.name, restaurant_path(restaurant) %></strong><br>
      <%= restaurant.address %><br>
      Category: <%= restaurant.category.capitalize %>
    </li>
  <% end %>
</ul>

<%= link_to "Add a new restaurant", new_restaurant_path %>
